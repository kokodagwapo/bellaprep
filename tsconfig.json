{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "App.tsx",
    "appFlow.ts",
    "bellaKnowledgeBase.ts",
    "index.tsx",
    "types.ts",
    "vite-env.d.ts",
    "components/**/*",
    "data/**/*",
    "lib/**/*",
    "services/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "apps",
    "packages"
  ]
}